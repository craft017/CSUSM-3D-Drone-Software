<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Camera Preview as Background -->
        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <!-- Start Button -->
    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start WebSocket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Takeoff Button -->
    <Button
        android:id="@+id/takeoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takeoff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start" />

    <!-- Land Button -->

    <!-- Button Layout (Wrapper for all buttons) -->
    <Button
        android:id="@+id/land"
        android:layout_width="89dp"
        android:layout_height="44dp"
        android:text="Land"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toEndOf="@+id/takeoff"
        app:layout_constraintTop_toBottomOf="@+id/start" />

    <!-- Output TextView -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/takeoff">

        <!-- Forward Button -->

        <!-- Go Up Button -->
        <Button
            android:id="@+id/forward"
            android:layout_width="60dp"
            android:layout_height="63dp"
            android:text="Forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.103" />

        <!-- Backward Button -->

        <!-- Go Down Button -->

        <Button
            android:id="@+id/go_up"
            android:layout_width="66dp"
            android:layout_height="68dp"
            android:text="Up"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.789"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.106" />

        <Button
            android:id="@+id/backward"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="56dp"
            android:text="Backward"
            app:layout_constraintEnd_toStartOf="@+id/Rright"
            app:layout_constraintHorizontal_bias="0.872"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forward" />

        <!-- Left Button -->

        <Button
            android:id="@+id/go_down"
            android:layout_width="63dp"
            android:layout_height="66dp"
            android:layout_marginTop="48dp"
            android:text="Down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintStart_toEndOf="@+id/left"
            app:layout_constraintTop_toBottomOf="@+id/go_up" />

        <Button
            android:id="@+id/Rleft"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:text="Left Turn"
            app:layout_constraintEnd_toStartOf="@+id/forward"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forward" />

        <!-- Right Button -->

        <!-- Left Button -->

        <!-- Right Button -->
        <Button
            android:id="@+id/Rright"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:layout_marginTop="4dp"
            android:text="Right Turn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toEndOf="@+id/forward"
            app:layout_constraintTop_toBottomOf="@+id/forward" />

        <Button
            android:id="@+id/left"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:layout_marginTop="8dp"
            android:text="Left"
            app:layout_constraintEnd_toStartOf="@+id/go_up"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/go_up" />

        <Button
            android:id="@+id/right"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:text="Right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/go_up"
            app:layout_constraintTop_toBottomOf="@+id/go_up" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="start"
        android:maxLines="5"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:text="Output will appear here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Flight Controller Spinner -->
    <Spinner
        android:id="@+id/flight_controller_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/output" />

    <!-- Switch Screens Button -->
    <Button
        android:id="@+id/autoPilotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autopilot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
