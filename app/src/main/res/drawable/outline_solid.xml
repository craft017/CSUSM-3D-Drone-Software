<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button fill: transparent (so you see the tinted background beneath), or swap to a solid -->
    <solid android:color="@color/gold"/>

    <!-- Outline stroke -->
    <stroke
        android:width="2dp"
        android:color="@color/black"/>

    <!-- Rounded corners -->
    <corners android:radius="4dp"/>
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>